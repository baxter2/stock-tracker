<h1>My Portfolio</h1>

<h3>Search for Stocks</h1>
<div id="stock-lookup">
  <%= form_tag search_stocks_path, method: :get, id: "stock-lookup-form" do %>
    <div class="form-group">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control" %> 
      <br>
      <%= button_tag(type: :submit, class: "btn btn-block btn-success") do %>
        Look up a stock 
      <% end %>
    </div>
  <% end %>
</div>

<div>
  <strong>Symbol: </strong><%= @stock.ticker %>
  <strong>Name: </strong><%= @stock.name %>
  <strong>Price: </strong><%= @stock.last_price %>
</div>
